.model small
.data
a db 00h
b db 01h
r db 06h
d db 08 dup(?)
.code
mov ax,@data
mov ds,ax
mov si,offset a
mov al,[si]
mov si,offset b
mov bl,[si]
mov si,offset r
mov cx,[si]
mov si,offset d
mov [si],al
inc si
mov [si],bl
inc si
l1:add al,bl
mov [si],al
mov al,bl
mov bl,[si]
inc si
loop l1

mov cx,06h
mov si,offset d
l2:mov al,[si]
cmp al,0Ah
jge alpha
add al,30h
jmp incre
alpha:add al,37h
incre:mov dl,al
mov ah,02h
int 21h
inc si
loop l2

mov ah,4ch
int 21h
end
